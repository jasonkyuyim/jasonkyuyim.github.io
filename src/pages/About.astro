---
import IndexLayout from "@/layouts/IndexLayout.astro";
import AboutContent from "@/components/widgets/About.astro";
import { themeConfig } from "@/config";

const pageTitle = `About - ${themeConfig.site.title}`;
---

<IndexLayout>
    <section class="about-page">
        <AboutContent />
    </section>
</IndexLayout>

<style>
    .about-page {
        padding-top: 0.5rem;
    }

    .about-page h1 {
        margin-bottom: 1rem;
        font-size: 2rem;
    }
</style>
