---
interface Props {
    twitter?: string;
    linkedin?: string;
    github?: string;
    scholar?: string;
    class?: string;
}

import ScholarIcon from "@/icons/scholar.svg";
import LinkedinIcon from "@/icons/linkedin.svg";
import XIcon from "@/icons/x.svg";

const {
    twitter,
    linkedin,
    github,
    scholar,
    class: className = "",
} = Astro.props;
---

<div class={`social-icons ${className}`}>
    {
        twitter && (
            <a
                href={`https://x.com/${twitter.replace("@", "")}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="X (Twitter)"
            >
                <XIcon fill="currentColor" />
            </a>
        )
    }

    {
        linkedin && (
            <a
                href={`https://linkedin.com/in/${linkedin}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
            >
                <LinkedinIcon />
            </a>
        )
    }

    {
        github && (
            <a
                href={`https://github.com/${github}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="GitHub"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
            </a>
        )
    }

    {
        scholar && (
            <a
                href={`https://scholar.google.com/citations?user=${scholar}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Google Scholar"
            >
                <ScholarIcon />
            </a>
        )
    }
</div>

<p class="home-contact">
    Email:
    <span class="home-contact-email">jasonkyuyim [at] alum.mit.edu</span>
</p>
<p class="home-bio">
    I am a machine learning researcher and engineer. I enjoy thinking about novel algorithms, building software, and solving hard problems.
    I started as a research engineer at DeepMind, did my PhD at MIT, and now work at a AI startup.
    Lately, I have focused on diffusion models for multimodal state spaces (discrete and continuous) such as proteins.
</p>

<style>
    .social-icons {
        display: inline-flex;
        gap: 1rem;
        align-items: center;
        margin-top: 1.0rem;
    }

    .social-icons a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--text-primary);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .social-icons a:hover {
        color: var(--text-secondary);
    }

    .social-icons svg {
        width: 2rem;
        height: 2rem;
    }
    .home-contact {
        margin-top: 0.5rem;
        font-size: 1.2rem;
        font-weight: 600;
    }
    .home-bio {
        margin-top: 0.0rem;
    }
</style>
