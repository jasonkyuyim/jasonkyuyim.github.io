---
import { getEntry } from "astro:content";
import { render } from "astro:content";

const interestsEntry = await getEntry("interests", "interests");
// Check if there is actual content (excluding comments)
const hasContent = interestsEntry?.body
    ? interestsEntry.body.replace(/<!--[\s\S]*?-->/g, "").trim().length > 0
    : false;
const { Content } =
    hasContent && interestsEntry ? await render(interestsEntry) : { Content: null };
---

{
    hasContent && Content && (
        <div class="interests prose">
            <Content />
        </div>
    )
}
<style is:global>
    .interests:not(:empty) {
        margin-bottom: 1.25rem;
        /* margin-top: -4.5rem; */
    }
    .interests.prose p {
        line-height: 1.0;
        margin: 0.5rem 0;
    }
    /* .interests.prose h1,
    .interests.prose h2, */
    .interests.prose h1 {
        font-size: 1.0rem; /* tweak per level */
        margin-bottom: 0.45rem;
        margin-top: 01.0rem;
    }

    .interests.prose ul,
    .interests.prose ol {
        margin: 0.5rem 0 0.5rem 1.25rem;
        padding-left: 0.25rem;
    }

    .interests.prose li {
        margin-bottom: 0.25rem;
        position: relative;
    }

    .interests.prose .interests-year {
        float: right;
        min-width: 5rem;
        text-align: right;
        font-weight: 400;
        margin-left: 0.5rem;
        white-space: nowrap;
    }

    .interests.prose p::after,
    .interests.prose li::after {
        content: "";
        display: block;
        clear: both;
    }

    .interests.prose .interests-spacer {
        display: block;
        width: 100%;
        height: 1rem;
        pointer-events: none;
    }

    .interests.prose .interests-spacer-md {
        height: 0.3rem;
    }

    .interests.prose .interests-spacer-lg {
        height: 2rem;
    }
</style>