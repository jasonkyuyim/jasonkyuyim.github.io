---
import NavBar from "@/components/layout/NavBar.astro";
---

<header>
    <NavBar />
    <div class="header-main">
    </div>
</header>
<style>
    header {
        margin: 0;
    }
    .header-main {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1.5rem;
    }
    .site-info {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
    }
    .header-social-icons {
        margin-top: 0.25rem;
    }
    .header-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .profile-image {
        width: clamp(8rem, 28vw, 13rem);
        aspect-ratio: 13 / 17;
        height: auto;
        border-radius: 0.35rem;
        object-fit: cover;
    }
</style>
